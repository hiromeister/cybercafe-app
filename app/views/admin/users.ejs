<body>

   <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Cyber Café </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                        <li>
                                <a href="/">
                                    <i class="fa fa-home" aria-hidden="true"> </i>
                                    <span> Accueil </span>
                                </a>
                            </li>
                            <li>
                                <a href="/liste-ordinateurs">
                                    <i class="fa  fa-desktop" aria-hidden="true"></i>
                                    <span> Ordinateurs</span>
                                </a>
                            </li>
                            <li>
                                <a href="/liste-adherants">
                                    <i class="fa  fa-users" aria-hidden="true"></i>
                                    <span> Adherants</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa  fa-cogs" aria-hidden="true"></i>
                                    <span> Paramètres</span>
                                </a>
                            </li>
                </ul>
                
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li>
                        <a href="/">
                            <i class="fa fa-home" aria-hidden="true"> </i>
                            <span> Accueil </span>
                        </a>
                    </li>
                    <li>
                        <a href="/liste-ordinateurs">
                            <i class="fa  fa-desktop" aria-hidden="true"></i>
                            <span> Ordinateurs</span>
                        </a>
                    </li>
                    <li>
                        <a href="/liste-adherants">
                            <i class="fa  fa-users" aria-hidden="true"></i>
                            <span> Adhérants</span>
                        </a>
                    </li>
             
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">

                <div id="oModal" class="oModal">
                    <div>

                        <a href="#fermer" title="Fermer la fenêtre" class="droite">X</a>
                        <h2 style="font-weight: bold">Ajouter un adhérant </h2>

                        <section>
                            <form action="/adduser" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Nom </label>
                                        <input type="text" name="name" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Age </label>
                                        <input name="age" type="text" class="form-control" placeholder="">
                                    </div>
                                </div>

                              




                        </section>
                        <footer class="cf">

                            <button class="pull-right add" action="submit">AJOUTER </button>
                             <a href="#fermer" class="btn droite btn-fill btn-success cancel" title="Fermer la fenêtre"> ANNULER </a>
                            </form>
                        </footer>
                    </div>
                </div>

                <h2 class="sub-header">
                    <i class="fa  fa-users" aria-hidden="true"></i> Adhérants</h2>
                <a href="#oModal">
                    <button class="addbtn btn-lg"> AJOUTER </button>
                </a>
                <h3> Liste des adhérants de l'association</h3>
                <div class="card">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    
                                   
                                    <th>Nom</th>
                                    <th>Age</th>
                                    <th> Edit/Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0; i < user.length; i++){ %>
                                    <tr>
                                        <td>
                                            <%= user[i].name %>
                                        </td>

                                        <td>
                                            <%= user[i].age %>
                                        </td>

                                        <td> 
                                            <a href="/edit/utilisateur/<%= user[i]._id %> " ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        </td>
                                        

                                    </tr> 

                                    <%}%>


                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

  
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

</body>

