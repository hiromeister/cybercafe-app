        crossorigin="anonymous">

    <title>Cyber Café - Ordinateurs</title>

    <link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="../../assets/css/ie10-viewport-bug-workaround.css" rel="stylesheet">
    <link href="css/dashboard.css" rel="stylesheet">
    <script src="https://use.fontawesome.com/cdb0e95dfa.js"></script>
</head>

<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                    aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Project name</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                        <li>
                                <a href="/">
                                    <i class="fa fa-home" aria-hidden="true"> </i>
                                    <span> Accueil </span>
                                </a>
                            </li>
                            <li>
                                <a href="/liste-ordinateurs">
                                    <i class="fa  fa-desktop" aria-hidden="true"></i>
                                    <span> Ordinateurs</span>
                                </a>
                            </li>
                            <li>
                                <a href="/liste-adherants">
                                    <i class="fa  fa-users" aria-hidden="true"></i>
                                    <span> Adherants</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa  fa-cogs" aria-hidden="true"></i>
                                    <span> Paramètres</span>
                                </a>
                            </li>
                </ul>
                <form class="navbar-form navbar-right">
                    <input type="text" class="form-control" placeholder="Search...">
                </form>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar">
                    <li>
                        <a href="/">
                            <i class="fa fa-home" aria-hidden="true"> </i>
                            <span> Accueil </span>
                        </a>
                    </li>
                    <li>
                        <a href="/liste-ordinateurs">
                            <i class="fa  fa-desktop" aria-hidden="true"></i>
                            <span> Ordinateurs</span>
                        </a>
                    </li>
                    <li>
                        <a href="/liste-adherants">
                            <i class="fa  fa-users" aria-hidden="true"></i>
                            <span> Adherants</span>
                        </a>
                    </li>
                    
                </ul>

            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <div id="oModal" class="oModal">
                    <div>

                        <a href="#fermer" title="Fermer la fenêtre" class="droite">X</a>
                        <h2 style="font-weight: bold">Ajouter un ordinateur </h2>

                        <section>
                            <form action="/addcomputer" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Type </label>
                                        <input type="text" name="type" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Carte graphique </label>
                                        <input name="gpu" type="text" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Processeur </label>
                                        <input name="cpu" type="text" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Mémoire </label>
                                        <input name="memory" type="text" class="form-control" placeholder="">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <label> Carte mère </label>
                                        <input name="cm" type="text" class="form-control" placeholder="">
                                    </div>
                                </div>

                            </section>
                            <footer class="cf">
    
                                <button class="pull-right add" action="submit">AJOUTER </button>
                                 <a href="#fermer" class="btn droite btn-fill btn-success cancel" title="Fermer la fenêtre"> ANNzULER </a>
                                </form>
                            </footer>
                        </div>
                    </div>
    
                    <h2 class="sub-header">
                        <i class="fa  fa-desktop" aria-hidden="true"></i> Ordinateurs</h2>
                    <a href="#oModal">
                        <button class="addbtn btn-lg"> AJOUTER </button>
                    </a>
                    <div class="row">
    
                        <div class="col-md-12">
                            <div class="col-md-9">
    
                                <h3>
                                    <i class="fa  fa-power-off" style="pull-right" aria-hidden="true"></i> Occupé</h3>
                                <% for(var i = 0; i < computers.length; i++){ %>
                                    <%if (computers[i].usedby.length > 0 ) { %>
    
    
                                        <a href="edit/ordinateur/<%- computers[i]._id %>">
                                            <div class="cardz">
                                                <div class="row">
    
                                                    <div class="col-md-12">
                                                        <div class="container">
                                                            <h4>Type :
                                                                <%= computers[i].type %>
                                                            </h4>
                                                            <h5> Utilisé par :
                                                                <%= computers[i].usedby %>
                                                            </h5>
                                                            <p>Carte graphique :
                                                                <%= computers[i].gpu %>
                                                            </p>
                                                            <p> Processeur :
                                                                <%= computers[i].cpu %>
                                                            </p>
                                                            <p>Carte mère :
                                                                <%= computers[i].cm %>
                                                            </p>
                                                            <p> Mémoire :
                                                                <%= computers[i].memory %>
                                                            </p>
    
    
    
    
    
                                                        </div>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    <% } %>
                                    <% } %>
                                </div>
                                
                                
                            <div class="col-md-3">
                                <h3><i class="fa  fa-power-off" style="pull-right; color: #DFDFDF" aria-hidden="true"></i> Non utilisé</h3>
                                <div class="row">
                                    <% for(var i = 0; i < computers.length; i++){ %>
    
                                        <%if ( computers[i].usedby <= 0 ) { %>
    
                                            <a href="edit/ordinateur/<%- computers[i]._id %>">
                                                <div class="cardz">
                                                    <div class="row">
    
                                                        <div class="col-md-12">
                                                            <div class="container">
                                                                <p>Type :<%= computers[i].type %> </p>
                                                                <p>Carte graphique :<%= computers[i].gpu %></p>
                                                                <p> Processeur :<%= computers[i].cpu %> </p>
                                                                <p>Carte mère :<%= computers[i].cm %></p>
                                                                <p> Mémoire :<%= computers[i].memory %></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                            </a>
    
    
                                </div>
                                         <% } %>
                                    <% } %>
                            </div>
                    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    
    </body>
    
    </html>





